<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AAAAAAAA"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="58dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dev.javier.redsensores.Settings"
    tools:showIn="@layout/activity_settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/LAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/boton_config"
            android:layout_alignStart="@+id/boton_config"
            android:text="Address" />

        <EditText
            android:id="@+id/TextAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/boton_config"
            android:layout_alignStart="@+id/boton_config"
            android:layout_below="@+id/textView"
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="UnknownId" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="51dp" />

        <TextView
            android:id="@+id/LKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/boton_config"
            android:layout_alignStart="@+id/boton_config"
            android:layout_below="@+id/editText2"
            android:text="Key"
            tools:ignore="UnknownId" />

        <EditText
            android:id="@+id/TextKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:layout_weight="1"
            android:maxLines="4"
            android:lines="2"
            android:ems="10"
            android:inputType="textPersonName"
            android:singleLine="false"
            tools:ignore="UnknownId" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/BoolSaveData"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignLeft="@+id/boton_config"
        android:layout_alignStart="@+id/boton_config"
        android:layout_below="@+id/editText3"
        android:layout_weight="1"
        android:text="Save Data"
        tools:ignore="UnknownId" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="162dp" />

    <Button
        android:id="@+id/boton_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="SetConfig"
        android:text="@string/SetConfig"
        android:theme="@style/MyButton" />

</LinearLayout>
